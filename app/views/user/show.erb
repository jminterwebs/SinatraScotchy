<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

  <h3> <%= @user.username %></h3>
  <h3> <%= @user.email %></h3>

  <a href="/scotch">Pick a Scotch</a>
  <a href="/scotch/new">Add your own</a>


  <h1>Your Scotch</h1>
  <% @user.scotches.
  each do |scotch| %>

    <li> <a href="/scotch/<%= scotch.slug %> "> <%= scotch.name %> </a>
      <form action="/user/remove/<%= @user.slug %>/<%= scotch.slug %>" method="post">
        <input id="hidden" type="hidden" name="_method" value="patch">
        <input type="submit" value="Remove from Favorites">
    </form> </li>
  <% end %>



  <a href="/user/logout">log out</a>
