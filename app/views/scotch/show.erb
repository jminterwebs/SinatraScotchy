<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<h1>Scotchy Scotch Scotch</h1>

<h3> <%= @scotch.name %></h3>
<h3> <%= @scotch.age %> Year</h3>
<h3> <%= @scotch.abv %> proof</h3>
<h3> <%= @scotch.region %> </h3>
<h3> <%= @scotch.comments %> </h3>

<% @scotch.comments.each do |comment|%>
  <%= comment.content %>
  <%= comment.user.username %>
  <%= comment.user_id %>

<% end %>


<a href="/scotch/<%= @scotch.slug %>/comments">Add a comment</a>
<br>

People who like me

<% @scotch.users.each do |user| %>
  <%= user.username %>
<% end %>

<form action="/scotch/<%= @scotch.slug %>/add" method="POST">
  <input type="submit" value="Add Scotch">
</form>
